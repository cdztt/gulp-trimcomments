  "author": "",
  "license": "MIT",
  "dependencies": {
    "prettier": "^3.0.1"
  },
  "devDependencies": {
    "@types/gulp": "^4.0.13",
    "@types/vinyl": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "gulp": "^4.0.2",
    "jest": "^29.6.2",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
