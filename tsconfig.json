  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true
  },
  "include": ["src/**/*.ts"]
}
